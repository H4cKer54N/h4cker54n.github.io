---
const {href, ms} = Astro.props;
---

<a
  class=`rounded-full opacity-0 border border-white/15 flex justify-center items-center gap-x-2 py-2 px-2 md:px-4
   transition duration-300 bg-white/5 hover:bg-white/10 animate-fade-in-delayed`
  style=`--animate-delay: ${ms}ms;`
  target="_blank"
  href={href}
  rel="noopener noreferrer"
>
  <slot />
</a>

<style>
  @keyframes fade-in-delayed {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  .animate-fade-in-delayed {
    animation: fade-in-delayed 1s ease-out forwards;
    animation-delay: var(--animate-delay); /* Aplicar el retraso utilizando una variable CSS */
  }
</style>
